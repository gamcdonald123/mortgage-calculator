<!-- app/views/calculations/results.html.erb -->
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-center mb-6">Mortgage Calculation Results</h1>
    <p class="text-lg">Monthly Payment: £<%= '%.2f' % @results[:monthly_payment] %></p>
    <p class="text-lg">Total Interest Paid Over Period: £<%= '%.2f' % @results[:total_interest_period] %></p>
    <p class="text-lg">Total Principal Paid Over Period: £<%= '%.2f' % @results[:total_principal_period] %></p>
    
    <div class="mt-6">
        <h2 class="text-xl font-bold mb-4">Payment Schedule</h2>
        <table class="min-w-full leading-normal">
        <thead>
            <tr>
            <th>Month</th>
            <th>Payment</th>
            <th>Interest</th>
            <th>Principal</th>
            <th>Remaining Balance</th>
            </tr>
        </thead>
        <tbody>
            <% @results[:payments_schedule].each do |payment| %>
            <tr>
                <td><%= payment[:month] %></td>
                <td>£<%= '%.2f' % payment[:payment] %></td>
                <td>£<%= '%.2f' % payment[:interest] %></td>
                <td>£<%= '%.2f' % payment[:principal] %></td>
                <td>£<%= '%.2f' % payment[:balance] %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>
